

import java.io.IOException;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

/**
 * Servlet implementation class updateController
 */
@WebServlet("/updateController")
public class updateController extends HttpServlet {
	private static final long serialVersionUID = 1L;
       
    /**
     * @see HttpServlet#HttpServlet()
     */
    public updateController() {
        super();
        // TODO Auto-generated constructor stub
    }

	/**
	 * @see HttpServlet#doGet(HttpServletRequest request, HttpServletResponse response)
	 */
	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		// TODO Auto-generated method stub
		response.getWriter().append("Served at: ").append(request.getContextPath());
		int accId = Integer.parseInt(request.getParameter("accId"));
        String updateOption = request.getParameter("updateOption");
        String newValue = request.getParameter("newValue");
		
        user_account acc = new user_account(accId, userName, phoneNo, accBal, password);
        acc.setAccId(accId);
        
        dbUpdateOp updateOp = new dbUpdateOp();
        boolean success = false;
        switch (updateOption) {
            case "accId":
                success = updateOp.updateAccId(accId, Integer.parseInt(newValue));
                break;
            case "userName":
                success = updateOp.updateUserName(accId, newValue);
                break;
            case "phoneNo":
                success = updateOp.updatePhoneNo(accId, newValue);
                break;
            case "accBal":
                success = updateOp.updateAccountBalance(accId, Integer.parseInt(newValue));
                break;
            case "password":
                success = updateOp.updatePassword(accId, Integer.parseInt(newValue));
                break;
        }

        if (success) {
            request.setAttribute("message", "Data updated successfully.");
        } else {
            request.setAttribute("message", "Error updating data.");
        }
        

        // Display the JSP page with the result message
        request.getRequestDispatcher("update_data.jsp").forward(request, response);
    }


	

	/**
	 * @see HttpServlet#doPost(HttpServletRequest request, HttpServletResponse response)
	 */
	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		// TODO Auto-generated method stub
		doGet(request, response);
	}

}
